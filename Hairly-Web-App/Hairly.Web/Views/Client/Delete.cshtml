@using Hairly.Web.ViewModels.Client

@model ClientDeleteViewModel

@{
    ViewData["Title"] = "Delete Client";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none">
                                <i class="bi bi-people me-1"></i>Clients
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Delete</li>
                    </ol>
                </nav>
            </div>

            <!-- Warning Card -->
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Delete Client
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone.
                    </div>

                    <p class="lead mb-4">Are you sure you want to delete this client?</p>

                    <!-- Client Info -->
                    <div class="bg-light p-4 rounded mb-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="avatar-circle bg-danger bg-gradient text-white d-flex align-items-center justify-content-center me-3"
                                 style="width: 50px; height: 50px; border-radius: 50%; font-weight: 600;">
                                @Model.FullName.Substring(0, 1).ToUpper()
                            </div>
                            <div>
                                <h5 class="mb-1 fw-bold">@Model.FullName</h5>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-telephone me-1"></i>@Model.PhoneNumber
                                </p>
                            </div>
                        </div>

                        @if (Model.TotalAppointments > 0)
                        {
                            <div class="alert alert-info mb-0" role="alert">
                                <i class="bi bi-calendar-check me-2"></i>
                                This client has <strong>@Model.TotalAppointments</strong> appointment(s) in the system.
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">
                                <i class="bi bi-info-circle me-2"></i>
                                This client has no appointments.
                            </p>
                        }
                    </div>

                    <!-- Delete Form -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-lg btn-secondary px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-danger px-4">
                                <i class="bi bi-trash me-2"></i>Delete Client
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Warning -->
            <div class="mt-3">
                <small class="text-muted">
                    <i class="bi bi-shield-check me-1"></i>
                    Note: The client will be permanently removed from your database.
                </small>
            </div>
        </div>
    </div>
</div>
