@using Hairly.Web.ViewModels.Client;

@model ClientCreateViewModel

@{
    ViewData["Title"] = "Add New Client";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none">
                                <i class="bi bi-people me-1"></i>Clients
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Add New</li>
                    </ol>
                </nav>
                <h1 class="display-6 fw-bold mb-1">
                    <i class="bi bi-person-plus text-primary me-2"></i>Add New Client
                </h1>
                <p class="text-muted">Enter client information below</p>
            </div>

            <!-- Form Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- First Name -->
                        <div class="mb-4">
                            <label asp-for="FirstName" class="form-label fw-semibold">
                                First Name <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="FirstName" class="form-control form-control-lg"
                                       placeholder="Enter first name" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-4">
                            <label asp-for="LastName" class="form-label fw-semibold">
                                Last Name <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-person"></i>
                                </span>
                                <input asp-for="LastName" class="form-control form-control-lg"
                                       placeholder="Enter last name" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <!-- Phone Number -->
                        <div class="mb-4">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold">
                                Phone Number <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-telephone"></i>
                                </span>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg"
                                       placeholder="+359888123456 or 0888123456" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Format: +359... or 08...
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-semibold">
                                Email <span class="text-muted">(optional)</span>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control form-control-lg"
                                       placeholder="email@example.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Notes -->
                        <div class="mb-4">
                            <label asp-for="Note" class="form-label fw-semibold">
                                Notes <span class="text-muted">(optional)</span>
                            </label>
                            <textarea asp-for="Note" class="form-control" rows="4"
                                      placeholder="Any special notes about this client (allergies, preferences, etc.)"></textarea>
                            <span asp-validation-for="Note" class="text-danger small"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Add any important information about the client
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-end mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-lg btn-outline-secondary px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-primary px-4">
                                <i class="bi bi-check-circle me-2"></i>Create Client
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
