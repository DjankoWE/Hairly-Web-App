@using Hairly.Web.ViewModels.Client

@model ClientDetailsViewModel

@{
    ViewData["Title"] = "Client Details";
}

<div class="container">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none">
                                <i class="bi bi-people me-1"></i>Clients
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>
            </div>

            <!-- Client Info Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="row align-items-center mb-4">
                        <div class="col">
                            <div class="d-flex align-items-center">
                                <div class="avatar-circle bg-primary bg-gradient text-white d-flex align-items-center justify-content-center me-3"
                                     style="width: 60px; height: 60px; border-radius: 50%; font-size: 1.5rem; font-weight: 600;">
                                    @Model.FirstName.Substring(0, 1).ToUpper()@Model.LastName.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <h1 class="h3 fw-bold mb-1">@Model.FullName</h1>
                                    <p class="text-muted mb-0">
                                        <i class="bi bi-calendar-plus me-1"></i>
                                        Client since @Model.CreatedOn.ToString("MMMM dd, yyyy")
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-2"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash me-2"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Contact Information -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <h5 class="fw-semibold mb-3">
                                <i class="bi bi-info-circle text-primary me-2"></i>Contact Information
                            </h5>
                            <div class="mb-3">
                                <div class="text-muted small mb-1">Phone Number</div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-telephone-fill text-success me-2"></i>
                                    <strong>@Model.PhoneNumber</strong>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="text-muted small mb-1">Email Address</div>
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <i class="bi bi-envelope-fill text-info me-2"></i>
                                        <strong>@Model.Email</strong>
                                    }
                                    else
                                    {
                                        <i class="bi bi-envelope text-muted me-2"></i>
                                        <span class="text-muted fst-italic">No email provided</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="fw-semibold mb-3">
                                <i class="bi bi-sticky text-primary me-2"></i>Notes
                            </h5>
                            @if (!string.IsNullOrEmpty(Model.Note))
                            {
                                <div class="p-3 bg-light rounded">
                                    <p class="mb-0">@Model.Note</p>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">No notes available</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Appointments History -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-calendar-check text-primary me-2"></i>
                        Appointment History
                        <span class="badge bg-primary rounded-pill ms-2">@Model.RecentAppointments.Count</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.RecentAppointments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Date & Time</th>
                                        <th class="py-3">Service</th>
                                        <th class="py-3">Price</th>
                                        <th class="py-3">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.RecentAppointments)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div class="fw-semibold">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                                <div class="text-muted small">@appointment.AppointmentDate.ToString("hh:mm tt")</div>
                                            </td>
                                            <td class="py-3">
                                                <i class="bi bi-scissors text-muted me-2"></i>
                                                @appointment.ServiceName
                                            </td>
                                            <td class="py-3">
                                                <strong>€@appointment.ServicePrice.ToString("F2")</strong>
                                            </td>
                                            <td class="py-3">
                                                @{
                                                    var statusClass = appointment.Status switch
                                                    {
                                                        "Completed" => "success",
                                                        "Scheduled" => "primary",
                                                        "Canceled" => "danger",
                                                        "DidNotShowed" => "warning",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@appointment.Status</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x text-muted mb-3" style="font-size: 3rem; opacity: 0.3;"></i>
                            <p class="text-muted mb-0">No appointments yet</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Clients
                </a>
            </div>
        </div>
    </div>
</div>
