@model Hairly.Web.ViewModels.ErrorViewModel
@{
	ViewData["Title"] = "Error";
}

<div class="container py-5">
	<div class="row justify-content-center">
		<div class="col-md-6 text-center">
			<div class="mb-4">
				<i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
			</div>
			<h1 class="display-4 fw-bold mb-3">Oops!</h1>
			<p class="lead mb-4">An error occurred while processing your request.</p>
            
			@if (Model?.ShowRequestId ?? false)
			{
				<p class="text-muted">
					<small>
						<strong>Request ID:</strong> <code>@Model.RequestId</code>
					</small>
				</p>
			}

			<div class="mt-4">
				<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
					<i class="bi bi-house-door me-2"></i>Back to Home
				</a>
			</div>
		</div>
	</div>
</div>