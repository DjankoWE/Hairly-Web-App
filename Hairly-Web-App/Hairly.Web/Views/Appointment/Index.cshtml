@using Hairly.Web.ViewModels.Appointment;

@model IEnumerable<AppointmentIndexViewModel>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container-fluid">
    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Error Message -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-6 fw-bold mb-1">
                        <i class="bi bi-calendar-check text-primary me-2"></i>Appointments
                    </h1>
                    <p class="text-muted mb-0">Manage your appointment schedule</p>
                </div>
                <div>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>New Appointment
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card border-0 shadow-sm text-center py-5">
                    <div class="card-body">
                        <i class="bi bi-calendar-x text-muted mb-3" style="font-size: 4rem; opacity: 0.3;"></i>
                        <h3 class="h5 mb-3">No appointments yet</h3>
                        <p class="text-muted mb-4">Start scheduling appointments for your clients.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Schedule First Appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Date & Time</th>
                                        <th class="py-3">Client</th>
                                        <th class="py-3">Service</th>
                                        <th class="py-3">Duration</th>
                                        <th class="py-3">Price</th>
                                        <th class="py-3">Status</th>
                                        <th class="py-3 text-end px-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr class="@(appointment.AppointmentDate.Date == DateTime.Today ? "table-info" : "")">
                                            <td class="px-4 py-3">
                                                <div class="fw-semibold">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                                <div class="text-muted small">@appointment.AppointmentDate.ToString("hh:mm tt")</div>
                                            </td>
                                            <td class="py-3">
                                                <i class="bi bi-person me-2 text-muted"></i>
                                                @appointment.ClientFullName
                                            </td>
                                            <td class="py-3">
                                                <i class="bi bi-scissors me-2 text-primary"></i>
                                                @appointment.ServiceName
                                            </td>
                                            <td class="py-3">
                                                <i class="bi bi-clock me-1 text-muted"></i>
                                                @{
                                                    var hours = appointment.ServiceDuration / 60;
                                                    var minutes = appointment.ServiceDuration % 60;
                                                    if (hours > 0 && minutes > 0)
                                                    {
                                                        <span>@hours h @minutes min</span>
                                                    }
                                                    else if (hours > 0)
                                                    {
                                                        <span>@hours h</span>
                                                    }
                                                    else
                                                    {
                                                        <span>@minutes min</span>
                                                    }
                                                }
                                            </td>
                                            <td class="py-3">
                                                <strong class="text-success">€@appointment.ServicePrice.ToString("F2")</strong>
                                            </td>
                                            <td class="py-3">
                                                @{
                                                    var statusClass = appointment.Status switch
                                                    {
                                                        Hairly.Data.Models.Enums.AppointmentStatus.Completed => "success",
                                                        Hairly.Data.Models.Enums.AppointmentStatus.Scheduled => "primary",
                                                        Hairly.Data.Models.Enums.AppointmentStatus.Canceled => "danger",
                                                        Hairly.Data.Models.Enums.AppointmentStatus.DidNotShowed => "warning",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@appointment.Status</span>
                                            </td>
                                            <td class="py-3 text-end px-4">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@appointment.Id"
                                                       class="btn btn-sm btn-outline-primary" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@appointment.Id"
                                                       class="btn btn-sm btn-outline-secondary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@appointment.Id"
                                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer bg-light border-0 px-4 py-3">
                        <div class="text-muted">
                            <i class="bi bi-info-circle me-2"></i>
                            Total appointments: <strong>@Model.Count()</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .table > tbody > tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }

    .btn-group .btn {
        padding: 0.25rem 0.75rem;
    }

    .table-info {
        background-color: rgba(13, 202, 240, 0.1) !important;
    }
</style>
