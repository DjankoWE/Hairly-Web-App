@using Hairly.Web.ViewModels.Appointment;

@model AppointmentDetailsViewModel

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10 mx-auto">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none">
                                <i class="bi bi-calendar-check me-1"></i>Appointments
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>
            </div>

            <!-- Main Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <div class="row align-items-center mb-4">
                        <div class="col">
                            <h1 class="h3 fw-bold mb-1">Appointment Details</h1>
                            <p class="text-muted mb-0">
                                <i class="bi bi-calendar me-1"></i>
                                @Model.AppointmentDate.ToString("MMMM dd, yyyy - hh:mm tt")
                            </p>
                        </div>
                        <div class="col-auto">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil me-2"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash me-2"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Client & Service Info -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <h5 class="fw-semibold mb-3">
                                <i class="bi bi-person text-primary me-2"></i>Client Information
                            </h5>
                            <div class="bg-light p-3 rounded">
                                <div class="mb-2">
                                    <strong>Name:</strong> @Model.Client.FullName
                                </div>
                                <div class="mb-2">
                                    <strong>Phone:</strong>
                                    <i class="bi bi-telephone me-1"></i>@Model.Client.PhoneNumber
                                </div>
                                <div class="mb-0">
                                    <strong>Email:</strong>
                                    @if (!string.IsNullOrEmpty(Model.Client.Email))
                                    {
                                        <i class="bi bi-envelope me-1"></i>
                                        @Model.Client.Email
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">No email</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="fw-semibold mb-3">
                                <i class="bi bi-scissors text-primary me-2"></i>Service Information
                            </h5>
                            <div class="bg-light p-3 rounded">
                                <div class="mb-2">
                                    <strong>Service:</strong> @Model.Service.Name
                                </div>
                                <div class="mb-2">
                                    <strong>Duration:</strong>
                                    <i class="bi bi-clock me-1"></i>
                                    @{
                                        var hours = Model.Service.DurationInMinutes / 60;
                                        var minutes = Model.Service.DurationInMinutes % 60;
                                        if (hours > 0 && minutes > 0)
                                        {
                                            <span>@hours h @minutes min</span>
                                        }
                                        else if (hours > 0)
                                        {
                                            <span>@hours h</span>
                                        }
                                        else
                                        {
                                            <span>@minutes min</span>
                                        }
                                    }
                                </div>
                                <div class="mb-0">
                                    <strong>Price:</strong>
                                    <span class="text-success fw-bold">€@Model.Service.Price.ToString("F2")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Status & Notes -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <h5 class="fw-semibold mb-3">Status</h5>
                            @{
                                var statusClass = Model.Status switch
                                {
                                    Hairly.Data.Models.Enums.AppointmentStatus.Completed => "success",
                                    Hairly.Data.Models.Enums.AppointmentStatus.Scheduled => "primary",
                                    Hairly.Data.Models.Enums.AppointmentStatus.Canceled => "danger",
                                    Hairly.Data.Models.Enums.AppointmentStatus.DidNotShowed => "warning",
                                    _ => "secondary"
                                };

                                var statusIcon = Model.Status switch
                                {
                                    Hairly.Data.Models.Enums.AppointmentStatus.Completed => "check-circle-fill",
                                    Hairly.Data.Models.Enums.AppointmentStatus.Scheduled => "calendar-check",
                                    Hairly.Data.Models.Enums.AppointmentStatus.Canceled => "x-circle-fill",
                                    Hairly.Data.Models.Enums.AppointmentStatus.DidNotShowed => "exclamation-triangle-fill",
                                    _ => "circle"
                                };
                            }
                            <div class="d-flex align-items-center">
                                <span class="badge bg-@statusClass fs-5 px-3 py-2">
                                    <i class="bi bi-@statusIcon me-2"></i>@Model.Status
                                </span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="fw-semibold mb-3">Notes</h5>
                            @if (!string.IsNullOrEmpty(Model.Note))
                            {
                                <div class="bg-light p-3 rounded">
                                    <p class="mb-0">@Model.Note</p>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">No notes available</p>
                            }
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Meta Info -->
                    <div class="text-muted small">
                        <i class="bi bi-info-circle me-1"></i>
                        Created on @Model.CreatedOn.ToString("MMMM dd, yyyy - hh:mm tt")
                    </div>
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Appointments
                </a>
            </div>
        </div>
    </div>
</div>
