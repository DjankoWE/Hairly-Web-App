@using Hairly.Web.ViewModels.Appointment;

@model AppointmentDeleteViewModel

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" class="text-decoration-none">
                                <i class="bi bi-calendar-check me-1"></i>Appointments
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Delete</li>
                    </ol>
                </nav>
            </div>

            <!-- Warning Card -->
            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Delete Appointment
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone.
                    </div>

                    <p class="lead mb-4">Are you sure you want to delete this appointment?</p>

                    <!-- Appointment Info -->
                    <div class="bg-light p-4 rounded mb-4">
                        <div class="d-flex align-items-start mb-3">
                            <div class="avatar-circle bg-danger bg-gradient text-white d-flex align-items-center justify-content-center me-3"
                                 style="width: 50px; height: 50px; border-radius: 50%; font-weight: 600; flex-shrink: 0;">
                                <i class="bi bi-calendar-x fs-5"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h5 class="mb-1 fw-bold">@Model.AppointmentDate.ToString("MMM dd, yyyy")</h5>
                                <p class="text-muted mb-0 small">@Model.AppointmentDate.ToString("hh:mm tt")</p>
                            </div>
                        </div>

                        <div class="border-top pt-3">
                            <div class="row g-2">
                                <div class="col-12">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-person me-2 text-muted"></i>
                                        <strong class="me-2">Client:</strong> @Model.ClientFullName
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-scissors me-2 text-muted"></i>
                                        <strong class="me-2">Service:</strong> @Model.ServiceName
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-info-circle me-2 text-muted"></i>
                                        <strong class="me-2">Status:</strong>
                                        @{
                                            var statusClass = Model.Status switch
                                            {
                                                Hairly.Data.Models.Enums.AppointmentStatus.Completed => "success",
                                                Hairly.Data.Models.Enums.AppointmentStatus.Scheduled => "primary",
                                                Hairly.Data.Models.Enums.AppointmentStatus.Canceled => "danger",
                                                Hairly.Data.Models.Enums.AppointmentStatus.DidNotShowed => "warning",
                                                _ => "secondary"
                                            };
                                        }
                                        <span class="badge bg-@statusClass">@Model.Status</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Form -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-lg btn-secondary px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-danger px-4">
                                <i class="bi bi-trash me-2"></i>Delete Appointment
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Additional Warning -->
            <div class="mt-3">
                <small class="text-muted">
                    <i class="bi bi-shield-check me-1"></i>
                    Note: The appointment will be permanently removed from your schedule.
                </small>
            </div>
        </div>
    </div>
</div>
