@{
    ViewData["Title"] = "Welcome";
}

<!-- Hero Section -->
<div class="hero-section text-center py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-4">Welcome to Hairly</h1>
                <p class="lead fs-4 mb-4">
                    Your intelligent assistant for hair salon management
                </p>
                <p class="fs-5 mb-5">
                    Organize clients, services and appointments in one place. Easy, fast and efficient.
                </p>
                @if (!User.Identity!.IsAuthenticated)
                {
                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg px-5 py-3 fw-semibold">
                            <i class="bi bi-person-plus me-2"></i>Get Started
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-5 py-3 fw-semibold">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                        </a>
                    </div>
                }
                else
                {
	                <p class="fs-5 text-white-50">
		                Use the navigation menu to manage your salon
	                </p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container my-5 py-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold mb-3">Everything in One Place</h2>
        <p class="text-muted fs-5">Discover the convenience of digital management</p>
    </div>

    <div class="row g-4">
        <!-- Feature 1 -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                        <i class="bi bi-people-fill fs-1"></i>
                    </div>
                    <h3 class="h4 mb-3">Client Management</h3>
                    <p class="text-muted">
                        Create client profiles with detailed information, preferences and visit history.
                    </p>
                </div>
            </div>
        </div>

        <!-- Feature 2 -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-success bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                        <i class="bi bi-calendar-check-fill fs-1"></i>
                    </div>
                    <h3 class="h4 mb-3">Appointment Booking</h3>
                    <p class="text-muted">
                        Easy booking and tracking of all appointments. Never miss a scheduled visit again.
                    </p>
                </div>
            </div>
        </div>

        <!-- Feature 3 -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm hover-lift">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-info bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px;">
                        <i class="bi bi-scissors fs-1"></i>
                    </div>
                    <h3 class="h4 mb-3">Service Catalog</h3>
                    <p class="text-muted">
                        Create and manage your services with prices and duration for each procedure.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- About Section -->
<div class="bg-light py-5 my-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h2 class="display-6 fw-bold mb-4">Why Hairly?</h2>
                <p class="lead mb-4">
                    Hairly is created specifically for hairdressers who want to organize their work more efficiently.
                </p>
                <ul class="list-unstyled">
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Easy to Use</strong> - intuitive interface that anyone can use
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Always Up-to-Date</strong> - your data is accessible from any device
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Secure</strong> - your data is protected and confidential
                    </li>
                    <li class="mb-3">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        <strong>Free</strong> - use Hairly without limitations
                    </li>
                </ul>
            </div>
            <div class="col-lg-6 text-center">
                <div class="p-5">
                    <i class="bi bi-phone text-primary" style="font-size: 15rem; opacity: 0.1;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
@if (!User.Identity.IsAuthenticated)
{
    <div class="container text-center py-5 my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <h2 class="display-5 fw-bold mb-4">Ready to Get Started?</h2>
                <p class="lead mb-5">
                    Register for free and take control of your salon today!
                </p>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-5 py-3 fw-semibold">
                    <i class="bi bi-rocket-takeoff me-2"></i>Create Account Now
                </a>
            </div>
        </div>
    </div>
}

<style>
    .hover-lift {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

    .hero-section {
        border-radius: 0 0 50px 50px;
    }
</style>
